 window.addEventListener("load", function () {
  const track = document.getElementById("astro-carousel-track");
  if (!track) return;

  const cards = Array.from(track.children);
  const totalCards = cards.length;

  let cardsPerSlide = window.innerWidth < 768 ? 1 : 3;
  let slides = [];
  let currentSlide = 0;
  let timer;

  // Group cards into slides
  function buildSlides() {
    track.innerHTML = "";
    slides = [];

    for (let i = 0; i < totalCards; i += cardsPerSlide) {
      const slide = document.createElement("div");
      slide.className = "carousel-slide flex w-full shrink-0";
      for (let j = i; j < i + cardsPerSlide && j < totalCards; j++) {
        slide.appendChild(cards[j].cloneNode(true));
      }
      slides.push(slide);
      track.appendChild(slide);
    }
  }

  function slideTo(slideIndex) {
    const shift = slideIndex * 100;
    track.style.transform = `translateX(-${shift}%)`;
  }

  function next() {
    currentSlide = (currentSlide + 1) % slides.length;
    slideTo(currentSlide);
  }

  function prev() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    slideTo(currentSlide);
  }

  function resetTimer() {
    clearInterval(timer);
    timer = setInterval(next, 3000);
  }

  function initCarousel() {
    buildSlides();
    currentSlide = 0;
    slideTo(0);
    resetTimer();
  }

  initCarousel();

